<%- include('partials/header') %>
  <body>
    <div class="pure-g">

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <h1 class="content-title">Les actualités du blog</h1>

        <div class="pure-g">

      <%  let data = dataset.filter(e => e.category === category); console.log(data)%>

      <% for (let cat of data) { %>
   
          <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
            <header>
              <img class="card-img pure-img" src="/images/<%= cat.img %>" alt="<%= cat.img_alt %>">
              <h2><%= cat.title %></h2>
              <div class="card-meta">
                Par <a href="/autor/<%= cat.author %>"><%= cat.author%></a> 
                dans la catégorie <a href="/category/<%= cat.category %>"><%=cat.category%></a>
              </div>
            </header>
            <p>
            <%= cat.text %>
            </p>
            <a class="card-action pure-button" href="/article/<%= cat.id %>">Lire l'article</a>
          </article>

            
 

        <%    } %>

        <%- include('partials/footer') %>