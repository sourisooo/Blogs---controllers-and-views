<%- include('partials/header') %>

    <div class="pure-g">

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <h1 class="content-title">Les actualités du blog</h1>

        <div class="pure-g">

   
          <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
            <header>
              <img class="card-img pure-img" src="/images/<%= dataset[article].img %>" alt="<%= dataset[article].img_alt %>">
              <h2><%= dataset[article].title %></h2>
              <div class="card-meta">
                Par <a href="#"><%= dataset[article].author%></a> 
                dans la catégorie <a href="#"><%=dataset[article].category%></a>
              </div>
            </header>
            <p>
            <%= dataset[article].text %>

            </p>
            <a class="card-action pure-button" href="/">Retourner à la page d'accueil</a>
          </article>

            
 

          <%- include('partials/footer') %>